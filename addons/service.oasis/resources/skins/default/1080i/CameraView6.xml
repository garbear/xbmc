<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="panel">
			<itemlayout width="640" height="540">
				<control type="cameraview">
					<topic>$INFO[ListItem.Property(smarthome.cameratopic)]</topic>
					<stretchmode>zoom</stretchmode>
				</control>
				<control type="image">
					<bottom>-20</bottom>
					<height>90</height>
					<left>-20</left>
					<right>-20</right>
					<texture border="40">buttons/dialogbutton-nofo.png</texture>
				</control>
				<control type="label">
					<bottom>0</bottom>
					<height>50</height>
					<label>$INFO[ListItem.Label]</label>
					<font>font37</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="image">
					<description>X Games logo</description>
					<texture>X_Games.png</texture>
					<aspectratio>keep</aspectratio>
					<top>130</top>
					<bottom>130</bottom>
					<left>130</left>
					<right>130</right>
				</control>
			</itemlayout>
			<focusedlayout width="640" height="540">
				<control type="cameraview">
					<topic>$INFO[ListItem.Property(smarthome.cameratopic)]</topic>
					<stretchmode>zoom</stretchmode>
				</control>
				<control type="image">
					<bottom>-20</bottom>
					<height>90</height>
					<left>-20</left>
					<right>-20</right>
					<texture border="40">buttons/dialogbutton-nofo.png</texture>
				</control>
				<control type="label">
					<bottom>0</bottom>
					<height>50</height>
					<label>$INFO[ListItem.Label]</label>
					<font>font37</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="image">
					<description>X Games logo</description>
					<texture>X_Games.png</texture>
					<aspectratio>keep</aspectratio>
					<top>130</top>
					<bottom>130</bottom>
					<left>130</left>
					<right>130</right>
				</control>
			</focusedlayout>
			<content>
				<item>
					<label>RGB Camera</label>
					<property name="smarthome.cameratopic">/oasis/kinect2/hd/image_color</property>
				</item>
				<item>
					<label>Foreground</label>
					<property name="smarthome.cameratopic">/oasis/kinect2/subtracted</property>
				</item>
				<item>
					<label>Bar View</label>
					<property name="smarthome.cameratopic">/oasis/asus/image_raw</property>
				</item>
				<item>
					<label>Point Cloud</label>
					<property name="smarthome.cameratopic">/oasis/kinect2/sd/image_color_rect</property>
				</item>
				<item>
					<label>Background</label>
					<property name="smarthome.cameratopic">/oasis/kinect2/background</property>
				</item>
				<item>
					<label>Bar View Subtracted</label>
					<property name="smarthome.cameratopic">/oasis/asus/subtracted</property>
				</item>
			</content>
		</control>
	</controls>
</window>
